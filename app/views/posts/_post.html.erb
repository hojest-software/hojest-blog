<div id="<%= dom_id post %>" class="max-w-xl">
  <div class="flex">
    <p class="text-[#FF5633]">Lucas Chizzoli</p>
    <p class="mx-3"> - </p>
    <p><%= post.created_at %></p>
  </div>
  <h3 class="font-semibold text-xl mt-3">
    <%= link_to post.title, post, data: { turbo: false } %>
  </h3>
  <p class="mt-3">
    <%= post.content %>
  </p>
  <div>
    <% post.topcis.each do |topic| %>
      <div class="rounded-xl bg-[#dddddd] text-[#777777] w-fit py-0.5 px-2 mt-2">
        <%= topic %>
      </div>
    <% end %>
  </div>
</div>
