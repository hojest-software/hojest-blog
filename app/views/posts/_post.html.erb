<div id="<%= dom_id post %>" class="w-full flex items-center">
  <div class="flex-grow">
    <%= render 'commons/author_date', post: post %>
    <h3 class="font-semibold text-xl mt-3">
      <%= link_to post.title, post, data: { turbo: false }, class: "hover:underline" %>
    </h3>
    <p class="mt-3 lg:max-w-xl">
      <%= post.description %>
    </p>
    <div>
      <%= render 'commons/topics', post: post %>
    </div>
  </div>
  <div>
    <%= image_tag post.cover_image || '', width: "200px" %>
  </div>
</div>
