<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-7">
    <%= form.label :title, class: "block" %>
    <%= form.text_field :title, class: "input bg-white p-3 mt-3 border border-gray-300 w-full" %>
  </div>
  <div class="my-7">
    <%= form.label :description, class: "block" %>
    <%= form.text_field :description, class: "input bg-white p-3 mt-3 border border-gray-300 w-full" %>
  </div>

  <div class="my-7">
    <div class="flex">
      <%= form.label :topics, class: "block" %>
      <p class="ml-3 text-gray-500">Comma separated topics. Example: Rails, Node, React</p>
    </div>
    <%= form.text_field :topics, class: "input bg-white p-3 mt-3 border border-gray-300 w-full" %>
  </div>

  <div class="my-7">
    <%= form.label :content, class: "block" %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="mt-9">
    <%= submit_tag "Create Post", class: "bg-[#FF5633] font-semibold text-white px-5 py-3" %>
  </div>
<% end %>
