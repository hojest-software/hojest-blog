<div id="<%= dom_id post %>" class="w-full flex flex-wrap">
  <div class="border-b lg:border-b-0 lg:border-r border-gray-300 border-0 pr-5 flex flex-wrap">
    <div class="mr-5">
      <%= render 'commons/author_date', post: post %>
      <h3 class="font-semibold text-xl mt-3">
        <%= link_to post.title, post, data: { turbo: false }, class: "hover:underline" %>
      </h3>
      <p class="mt-3 max-w-xs">
        <%= post.description %>
      </p>
      <div>
        <%= render 'commons/topics', post: post %>
      </div>
    </div>
    <div class="my-3 lg:my-0">
      <%= image_tag post.vertical_cover_image || '', style: "height:550px" %>
    </div>
  </div>
  <div class="px-3 mt-5 lg:mt-0">
    <h3 class="text-[#777777] mb-3">Quick Tips</h3>
    <turbo-frame id="quick-tips" src="quick-tips" />
  </div>
</div>
