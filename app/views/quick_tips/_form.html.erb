<%= form_with(model: quick_tip) do |form| %>
  <% if quick_tip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quick_tip.errors.count, "error") %> prohibited this quick tip from being saved:</h2>

      <ul>
        <% quick_tip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-7">
    <%= form.label :title, class: "block" %>
    <%= form.text_field :title, class: "input bg-white p-3 mt-3 border border-gray-300 w-full" %>
  </div>

  <div class="my-7">
    <%= form.label :content, class: "block" %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="mt-9">
    <%= submit_tag editing ? "Save Quick Tip" : "Create Quick Tip", class: "bg-[#FF5633] font-semibold text-white px-5 py-3" %>
  </div>
<% end %>
