<turbo-frame id="quick-tips">
  <div class="blok sm:flex lg:block">
    <% @quick_tips.each do |tip| %>
      <%= link_to "#{quick_tips_path}/#{tip.id}", data: { turbo: false } do %>
        <div class="max-w-[200px] h-[150px] hover:text-gray-600 hover:cursor-pointer trim-text-wrapper">
          <h3 class="font-semibold text-lg mb-3"><%= tip.title %></h3>
          <%= tip.content %>
        </div>
      <% end %>
    <% end %>
  </div>
</turbo-frame>
